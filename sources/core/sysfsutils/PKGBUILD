# $Id: PKGBUILD 158624 2012-05-05 03:20:18Z dreisner $
# Maintainer: Tobias Powalowski <tpowa@archlinux.org>

# 05-05-2013 Raspi-Build: Maciej Szeptuch (Neverous) <neverous@neverous.info>

pkgname=sysfsutils
pkgver=2.1.0
pkgrel=8
pkgdesc="System Utilities Based on Sysfs"
arch=(armv6zk)
license=('GPL' 'LGPL')
url="http://linux-diag.sourceforge.net/Sysfsutils.html"
groups=('base')
depends=('glibc')
source=(http://downloads.sourceforge.net/sourceforge/linux-diag/${pkgname}-${pkgver}.tar.gz)
md5sums=('14e7dcd0436d2f49aa403f67e1ef7ddc')
options=(!libtool)

build() {
    cd "$pkgname-$pkgver"
    ./configure --prefix=/usr --mandir=/usr/share/man
    make
}

check() {
    cd "$pkgname-$pkgver"
    make check
}

package() {
    cd "$pkgname-$pkgver"
    make DESTDIR="$pkgdir" install
    rm "$pkgdir/usr/lib/libsysfs.a"
}
