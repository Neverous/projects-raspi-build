# 06-05-2013 Raspi-Build: Maciej Szeptuch (Neverous) <neverous@neverous.info>

pkgname=f2fs-tools
pkgver=1.1.0
pkgrel=2
pkgdesc="Tools for Flash-Friendly File System (F2FS)"
arch=(${RB_TARGET_ARCH})
url="http://sourceforge.net/projects/f2fs-tools/"
depends=('util-linux')
license=('GPL')
source=('http://git.kernel.org/cgit/linux/kernel/git/jaegeuk/f2fs-tools.git/snapshot/f2fs-tools-1.1.0.tar.gz')
sha256sums=('c8cfb6895a0b3775f0df00a776fd451558739289684dd43f1fd75f876fa62867')

build() {
    cd "${pkgname}-${pkgver}"

    autoreconf -fi
    ./configure --prefix=/usr
    make
}

package() {
    cd "${pkgname}-${pkgver}"

    make DESTDIR="${pkgdir}/" install
}

