# $Id: PKGBUILD 183529 2013-04-22 13:10:36Z heftig $
# Maintainer: Ionut Biru <ibiru@archlinux.org>

# 07-05-2013 Raspi-Build: Maciej Szeptuch (Neverous) <neverous@neverous.info>

pkgname=p11-kit
pkgver=0.18.1
pkgrel=1
pkgdesc="Library to work with PKCS#11 modules"
arch=(${RB_TARGET_ARCH})
url="http://p11-glue.freedesktop.org"
license=('BSD')
depends=('glibc' 'libtasn1')
options=(!libtool)
source=($url/releases/$pkgname-$pkgver.tar.gz{,.sig})
md5sums=('e4ef21592dbd126b62e1a6d4ad65ce5c'
         'SKIP')

build() {
    cd $pkgname-$pkgver
    ./configure --prefix=/usr --sysconfdir=/etc \
        --with-module-path=/usr/lib/pkcs11
    make
}

package() {
    cd  $pkgname-$pkgver
    make DESTDIR="$pkgdir" install
    install -Dm644 COPYING $pkgdir/usr/share/licenses/$pkgname/COPYING
}
