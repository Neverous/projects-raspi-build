# 05-05-2013 Raspi-Build: Maciej Szeptuch (Neverous) <neverous@neverous.info>
#   - disabled emacs

pkgname=cmake
pkgver=2.8.10.2
pkgrel=5
pkgdesc="A cross-platform open-source make system"
arch=('armv6zk')
url="http://www.cmake.org/"
license=('custom')
depends=('curl' 'libarchive' 'shared-mime-info')
install="${pkgname}.install"
source=("http://www.cmake.org/files/v2.8/${pkgname}-${pkgver}.tar.gz"
        'qt4.patch')
md5sums=('097278785da7182ec0aea8769d06860c'
         '4933fbe934d3989923f0a60a78dac44e')

build() {
    cd ${pkgname}-${pkgver}

    # qmake refers to Qt5
    patch -p1 -i "${srcdir}"/qt4.patch

    # Qt is built with reduce-relocations
    export CFLAGS="${CFLAGS} -fPIC"
    export CXXFLAGS="${CXXFLAGS} -fPIC"

    ./bootstrap --prefix=/usr \
        --mandir=/share/man \
        --docdir=/share/doc/cmake \
        --system-libs \
        --parallel=$(/usr/bin/getconf _NPROCESSORS_ONLN)
    make
}

package() {
    cd ${pkgname}-${pkgver}
    make DESTDIR="${pkgdir}" install

    vimpath="${pkgdir}/usr/share/vim/vimfiles"
    install -Dm644 Docs/cmake-indent.vim "${vimpath}"/indent/cmake-indent.vim
    install -Dm644 Docs/cmake-syntax.vim "${vimpath}"/syntax/cmake-syntax.vim

    install -Dm644 Docs/cmake-mode.el \
        "${pkgdir}"/usr/share/emacs/site-lisp/cmake-mode.el

    install -Dm644 Copyright.txt \
        "${pkgdir}"/usr/share/licenses/${pkgname}/LICENSE
}
