# Maintainer: Andreas Radke <andyrtr@archlinux.org>

# 07-05-2013 Raspi-Build: Maciej Szeptuch (Neverous) <neverous@neverous.info>
#   - fixed autoconf checks in scratchbox2

pkgname=gnutls
pkgver=3.1.10
pkgrel=1
pkgdesc="A library which provides a secure layer over a reliable transport layer"
arch=(${RB_TARGET_ARCH})
license=('GPL3' 'LGPL')
url="http://www.gnutls.org/"
install=gnutls.install
options=('!libtool' '!zipman')
depends=('gcc-libs>=4.7.1-5' 'libtasn1>=3.0' 'readline' 'zlib' 'nettle>=2.4' 'p11-kit>=0.12')
makedepends=('valgrind' 'strace' 'datefudge')
source=(ftp://ftp.gnutls.org/gcrypt/gnutls/v3.1/${pkgname}-${pkgver}.tar.xz{,.sig})
md5sums=('9e73aa5c3ef3b7358159a31302e25aa7'
         '062dd4fe7d527dadbb3d9e9fb240510f')

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    export gl_cv_func_printf_enomem=no
    ./configure --prefix=/usr \
        --with-zlib \
        --disable-static \
        --disable-guile \
        --disable-valgrind-tests
    make
}

check() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    make -k check
}

package() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    make DESTDIR="${pkgdir}" install

    # lots of .png files are put into infodir and are gzipped by makepkg! this may need to be fixed by using !zipman
    # gzip -9 all files in infodir and manpages manually
    find "$pkgdir/usr/share/info" -name '*.info*' -exec gzip -9 {} \;
    find "$pkgdir/usr/share/man" -exec gzip -9 {} \;
}
